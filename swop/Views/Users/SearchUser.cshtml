@model IEnumerable<swop.Models.User>

@{
    ViewBag.Title = "SearchUser";
}

    <section class="section-22">
        <h1 style="margin-left:1%;">Search User</h1>

        <label>Search by first name: <input type="text" id="SearchFirstName"></label>
        <label>Search by last name: <input type="text" id="SearchLastName"></label>
        <label>Search by email: <input type="text" id="SearchEmail"></label>
        @Html.ActionLink("Filter", "SearchUser", "Users", null, new { @class = "btn btn-warning", @onclick = "this.href += '?email=' + document.getElementById('SearchEmail').value + '&fName=' + document.getElementById('SearchFirstName').value + '&lName=' + document.getElementById('SearchLastName').value;" })
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApartmentDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApartmentPrice)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApartmentDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApartmentPrice)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.UserId })
                    </td>
                </tr>
            }

        </table>
    </section>