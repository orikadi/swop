@model swop.Models.User

@{
    ViewBag.Title = "RequestCycleSearch";
}

<h2>Request Cycle Search</h2>
Please write the country and city names accurately.
    
<form method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label> Country </label>
            <input type="text" id="CountryInput">
        </div>
        <div class="form-group">
            <label> City </label>
            <input type="text" id="CityInput">
        </div>

        <div class="form-group">
            <label for="start">Start date:</label>
            <input type="date" id="start" name="trip-start"
                   value="2020-05-21"
                   min="2020-05-21"> <!--change to current date somehow -->
        </div>
        <div class="form-group">
            <label for="end">End date:</label>
            <input type="date" id="end" name="trip-end"
                   value="2020-05-21"
                   min="2020-05-21">
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Request Search" class="btn btn-default" id="RequestSearchButton" onclick="SendRequest()" />
            </div>
        </div>
    </div>
</form>


<script>
    function SendRequest() {

            var destination = $("#CountryInput").val() + "-" + $("#CityInput").val();
            var sDate = $("#start").val();
            var eDate = $("#end").val();

            //set min date possible 
            var today = new Date();
            var dd = today.getDate();
             var mm = today.getMonth() + 1; //January is 0!
             var yyyy = today.getFullYear();
             if (dd < 10) {
                    dd = '0' + dd
             }
             if (mm < 10) {
                    mm = '0' + mm
             }

             today = yyyy + '-' + mm + '-' + dd;
             document.getElementById("start").setAttribute("min", today);
             document.getElementById("end").setAttribute("min", today);
            $.ajax({
                type: "GET",
                url: "/Users/SearchRequest",
                data: {
                    dest: destination,
                    start: sDate,
                    end: eDate
                },
            dataType: "json",
                success: function (data) {
                    if (data)
                        window.location = ('@Url.Action("About", "Home", null)') //homepage might be wrong
                    else alert("You already have an active request, cancel it if you want to input a new one");
                },
                error: function (xhr, status, error) {
                    alert("Error requesting search");
                }
            });
        }
</script>
  


