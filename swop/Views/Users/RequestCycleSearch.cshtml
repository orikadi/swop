@model swop.Models.User

@{
    ViewBag.Title = "RequestCycleSearch";
}

<h2>Request Cycle Search</h2>
Please write the country and city names accurately.

<form method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label> Country </label>
            <input type="text" id="CountryInput">
        </div>
        <div class="form-group">
            <label> City </label>
            <input type="text" id="CityInput">
        </div>

        <div class="form-group">
            <label for="start">Start date:</label>
            <input type="date" id="start" name="trip-start" min="1900-01-01" value="1900-01-01">
        </div>
        <div class="form-group">
            <label for="end">End date:</label>
            <input type="date" id="end" name="trip-end" min="1900-01-01" value="1900-01-01">
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Request Search" class="btn btn-default" id="RequestSearchButton" onclick="SendRequest()" />
            </div>
        </div>
    </div>
</form>


<script>
    function SendRequest() {
        if ($("#CountryInput").val() == "" || $("#CityInput").val() == "") {
            alert("You must enter both the country and city names");
        }
        else {
            var destination = $("#CountryInput").val() + "-" + $("#CityInput").val();
            var sDate = $("#start").val();
            var eDate = $("#end").val();

            $.ajax({
                type: "GET",
                url: "/Users/SearchRequest",
                data: {
                    dest: destination,
                    start: sDate,
                    end: eDate
                },
                dataType: "json",
                success: function (data) {
                    if (data)
                        window.location = ('@Url.Action("Index", "HomePage", null)') //homepage might be wrong
                    else alert("You already have an active request, cancel it if you want to input a new one");
                },
                error: function (xhr, status, error) {
                    alert("Error requesting search");
                }
            });
        }
    }

    //set min date possible
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1; //January is 0!
    var yyyy = today.getFullYear();
    if (dd < 10) {
        dd = '0' + dd
    }
    if (mm < 10) {
        mm = '0' + mm
    }

    today = yyyy + '-' + mm + '-' + dd;
    document.getElementById("start").setAttribute("min", today);
    document.getElementById("end").setAttribute("min", today);
    document.getElementById("start").setAttribute("value", today);
    document.getElementById("end").setAttribute("value", today);
</script>



