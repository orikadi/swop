@model swop.Models.User

@{
    ViewBag.Title = "RequestCycleSearch";
}

<h2>Request Cycle Search</h2>
Please write the country and city names accurately.
    
<form method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label> Country </label>
            <input type="text" id="CountryInput">
        </div>
        <div class="form-group">
            <label> City </label>
            <input type="text" id="CityInput">
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Request Search" class="btn btn-default" id="AddFundsButton" onclick="AddFunds()" />
            </div>
        </div>
    </div>
</form>

